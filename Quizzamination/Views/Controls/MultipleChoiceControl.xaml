<UserControl x:Class="Quizzamination.Views.Controls.MultipleChoiceControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizzamination.Views"
        mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Text}" FontWeight="Bold" Margin="0,0,0,10" TextWrapping="Wrap"/>
            <StackPanel x:Name="OptionsList" />
        </StackPanel>
    </Grid>
</UserControl>
