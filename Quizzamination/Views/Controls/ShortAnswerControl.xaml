<UserControl x:Class="Quizzamination.Views.Controls.ShortAnswerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="{Binding Text}" FontWeight="Bold" Margin="0,0,0,10" TextWrapping="Wrap"/>
        <TextBox x:Name="AnswerBox" Width="300" />
    </StackPanel>
</UserControl>